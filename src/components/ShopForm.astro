<form>
  <section id="radioBtns">
    <div class="radio">
      <input type="radio" id="buyOnce" name="buy" />
      <label for="buyOnce">Buy Once | $38</label>
    </div>
    <div class="radio">
      <input type="radio" id="subscribe" name="buy" />
      <label for="subscribe">Subscribe (SAVE 20%) | $30</label>
    </div>
  </section>
  <section class="add">
    <select id="number">
      <option value="null">1</option>
      <option value="null">2</option>
      <option value="null">3</option>
      <option value="null">4</option>
      <option value="null">5</option>
      <option value="null">6</option>
      <option value="null">7</option>
      <option value="null">8</option>
      <option value="null">9</option>
      <option value="null">10</option>
    </select>
    <button id="addBtn">ADD TO CART</button>
  </section>
</form>

<style>
  form {
    margin: 30px 0px 30px 0px;
  }

  #radioBtns {
    margin: 30px 0px 30px 0px;
  }

  .radio {
    display: flex;
    gap: 1em;
    justify-content: baseline;
    align-items: center;
    margin-bottom: 20px;
  }

  /* Styling af radio btn´s */
  input[type="radio"]:after {
    width: 20px;
    height: 20px;
    border-radius: 15px;
    top: -6px;
    left: -2px;
    position: relative;
    background-color: var(--bgInfo);
    content: "";
    display: inline-block;
    border: 2px solid var(--border);
  }

  input[type="radio"]:checked:after {
    width: 20px;
    height: 20px;
    border-radius: 15px;
    top: -6px;
    left: -2px;
    position: relative;
    background-color: var(--border);
    content: "";
    display: inline-block;
    border: 2px solid var(--border);
  }

  /* tilføj til kurv */
  .add {
    display: flex;
    width: 100%;
    gap: 1em;
  }

  #number {
    width: 30%;
    border: 1.5px solid var(--textColor);
  }

  #addBtn {
    padding: 10px;
    border: none;
    background-color: var(--bgButton);
    font-family: "Lato", sans-serif;
    font-weight: 400;
    font-size: 18px;
    color: var(--textColor);
    width: 65%;
    cursor: pointer;
  }
</style>

