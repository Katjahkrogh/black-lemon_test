<style>
  .info-box {
    background-color: var(--bgPrimary);
    margin: 15px 0;
    width: 100vw;
  }
  .info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px;
    cursor: pointer;
  }

  .hide {
    display: none;
  }

  .kryds {
    width: 18px;
    position: relative;
  }

  .vandret,
  .lodret {
    width: 100%;
    height: 2px;
    background-color: var(--textColor);
    position: absolute;
  }

  .lodret {
    rotate: 90deg;
    transition: transform 0.3s;
  }

  p {
    margin: 0 15px 20px 15px;
  }
  hr {
    margin: 15px;
  }

  /* media querys */
  @media (min-width: 785px) {
    .info-box {
      margin-left: 80px;
      width: 60vw;
    }
  }

  @media (min-width: 1200px) {
    .info-box {
      margin-left: 100px;
      width: 50vw;
    }
  }
</style>

